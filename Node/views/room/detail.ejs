                <div class="hotel_map">
                    <div class="location">
                        <span>숙소 위치</span>&nbsp;
                    </div>
                </div>
                <div id="map"></div>
                <script>
                    function initMap() {
                        const hotel = {lat: <%= rooms.location.map_let %>, lng: <%=rooms.location.map_lng %>};
                        const map = new google.maps.Map(
                            document.getElementById('map'), {zoom: 15, center: hotel});

                        const marker = new google.maps.Marker({position: hotel, map: map});
