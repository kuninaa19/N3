<body>
<ul class="top_nav">
    <li id="logo"><a href="/" class="active"><img class="logo_image"
                                                  src="https://img.icons8.com/doodle/48/000000/log-cabin.png"></a></li>
    <div id="navAlign">
        <% if(typeof nickname === "undefined") { %>
            <li><a id="openLogin">로그인</a></li>
            <li><a id="openRegister">회원가입</a></li>
        <% }else{ %>
            <li><a href="/message">메시지</a></li>
            <li><a href="/trip">여행</a></li>
            <li><a><%=nickname%></a></li>
            <li><a href="/logout">로그아웃</a></li>
        <% } %>
    </div>
</ul>
<% if(typeof nickname === "undefined") { %>
    <% include ../layout/modal %>
<% } %>
<!--본문-->
<!-- 숙소 이미지-->
<div>
    <div class="left_side">
        <img src="/static/images/rooms/<%=images[0].image_1%>"/>
    </div>
    <div class="middle_side">
        <img src="/static/images/rooms/<%=images[0].image_2%>"/>
        <img src="/static/images/rooms/<%=images[0].image_3%>"/>
    </div>
    <div class="right_side">
        <img src="/static/images/rooms/<%=images[0].image_4%>"/>
        <img src="/static/images/rooms/<%=images[0].image_5%>"/>
    </div>
</div>

